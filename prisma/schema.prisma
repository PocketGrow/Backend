// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestModel {
  id   Int     @id @default(autoincrement())
  name String? @db.VarChar(255)
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  hashedPassword String
  fullname       String
  dateOfBirth    DateTime?
  expense        Expense[]
  income         Income[]
}

model Expense {
  id      Int      @id @default(autoincrement())
  name    String
  nominal Int
  date    DateTime

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  expenseIncomeCategory   ExpenseIncomeCategory @relation(fields: [expenseIncomeCategoryId], references: [id])
  expenseIncomeCategoryId Int
}

model Income {
  id      Int      @id @default(autoincrement())
  name    String
  nominal Int
  date    DateTime

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  expenseIncomeCategory   ExpenseIncomeCategory @relation(fields: [expenseIncomeCategoryId], references: [id])
  expenseIncomeCategoryId Int
}

model ExpenseIncomeCategory {
  id      Int       @id @default(autoincrement())
  name    String
  Expense Expense[]
  Income  Income[]
}

model News {
  Id        Int     @id @default(autoincrement())
  Title     String
  Content   String
  HeaderImg String?
}
